<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true"
    android:background="@drawable/sfondo"
    tools:context=".AddPlaceActivity">


    <TextView
        android:id="@+id/luogo"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/alata"
        android:text="Dati Luogo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrizioneCreaLuogo" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nomeLuogoLayout"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luogo">

        <EditText
            android:id="@+id/inputNomeLuogo"
            android:layout_width="208dp"
            android:layout_height="56dp"
            android:background="@drawable/bordi_tondi"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>
/

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cittaLuogoLayout"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeLuogoLayout">

        <EditText
            android:id="@+id/inputCittaLuogo"
            android:layout_width="208dp"
            android:layout_height="56dp"
            android:background="@drawable/bordi_tondi"
            android:ems="10"
            android:hint="CittÃ "
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tipologiaLuogoLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_margin="35dp"
        android:hint="Tipologia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cittaLuogoLayout">

        <AutoCompleteTextView
            android:id="@+id/inputTipologia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/descrizioneCreaLuogo"
        android:layout_width="343dp"
        android:layout_height="76dp"
        android:layout_marginTop="80dp"
        android:text="Crea da qui il luogo da far visitare agli utenti"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descrizioneCreaZona"
        android:layout_width="343dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:text="Inizia a creare le zone che compongono il luogo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipologiaLuogoLayout" />


    <Button
        android:id="@+id/buttonAggiungiZona"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:drawableEnd="@drawable/ic_add"
        android:onClick="savePlaceOnDb"
        android:text="Aggiungi Zona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrizioneCreaZona" />

    <ProgressBar
        android:id="@+id/placeBarraCaricamento"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>


