<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true"
    android:background="@drawable/sfondo"
    tools:context=".AddPlaceCuratorActivity">


    <TextView
        android:id="@+id/luogo"
        android:layout_width="192dp"
        android:layout_height="26dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Dati Luogo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/inputNomeLuogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/luogo" />

    <EditText
        android:id="@+id/inputCittaLuogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="CittÃ "
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNomeLuogo" />

    <FrameLayout
            android:id="@+id/frameTipologiaLuogo"
            android:layout_width="208dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="44dp"
            android:hint="Tipologia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputCittaLuogo">


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerTipologiaLuogo"
            android:layout_width="208dp"
            android:layout_height="48dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="76dp"
        android:layout_marginTop="80dp"
        android:text="Crea da qui il luogo da far visitare agli utenti"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="76dp"
        android:layout_marginTop="48dp"
        android:text="Inizia a creare le zone che compongono il luogo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameTipologiaLuogo" />

    <Button
        android:id="@+id/buttonAggiungiZona"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="+ Zona"
        android:onClick="openFirstZoneActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />



</androidx.constraintlayout.widget.ConstraintLayout>


