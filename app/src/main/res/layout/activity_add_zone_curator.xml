<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true"
    android:background="@drawable/sfondo"
    tools:context=".AddZoneActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/zona"
            android:layout_width="84dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="148dp"
            android:fontFamily="@font/alata"
            android:text="Zona"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonAggiungiElemento"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_marginTop="148dp"
            android:drawableEnd="@drawable/ic_add"
            android:onClick="addViewElemento"
            android:text="Elemento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/zona"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputNomeZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zona" />

        <LinearLayout
            android:id="@+id/listaElementiLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNomeZona" />


        <TextView
            android:id="@+id/descriptionCreateFirstZone"
            android:layout_width="329dp"
            android:layout_height="26dp"
            android:layout_marginTop="48dp"
            android:text="Se hai terminato passa alla nuova zona"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listaElementiLayout" />

        <Button
            android:id="@+id/buttonAddZone"
            android:layout_width="275dp"
            android:layout_height="58dp"
            android:onClick="inputControl"
            android:text="Aggiungi Zona"
            android:drawableEnd="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionCreateFirstZone" />

