<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/logoApp"
        android:layout_width="181dp"
        android:layout_height="144dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_app2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bordi_tondi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoApp"
        app:passwordToggleEnabled="false">


        <EditText
            android:id="@+id/loginInputEmail"
            android:layout_width="321dp"
            android:layout_height="59dp"
            android:autofillHints="no"
            android:background="@drawable/bordi_tondi"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColorHint="#757575"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bordi_tondi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLayout"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/loginInputPassword"
            android:layout_width="321dp"
            android:layout_height="59dp"
            android:autofillHints="no"
            android:background="@drawable/bordi_tondi"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textPasswordDimenticata"
        android:layout_width="220dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="@string/password_dimenticata"
        android:textAlignment="center"
        android:textColor="#8B131111"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLayout" />

     <Button
         android:id="@+id/buttonAccedi"
         android:layout_width="268dp"
         android:layout_height="60dp"
         android:layout_marginTop="32dp"
         android:background="@drawable/bordi_tondi_button"
         android:backgroundTint="#655959"
         android:text="@string/accedi"
         android:textColor="#CB090808"
         android:textColorHint="#121111"
         android:textStyle="bold"
         android:onClick="userLogin"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.496"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/textPasswordDimenticata"
         app:strokeColor="#423A3A" />

    <TextView
        android:id="@+id/textAlternativa"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/alternativa"
        android:textAlignment="center"
        android:textColor="#8B131111"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAccedi" />

    <LinearLayout
        android:id="@+id/socialLayout"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAlternativa">

        <ImageView
            android:id="@+id/imageGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/google"
            android:contentDescription="@string/alternativa" />

        <ImageView
            android:id="@+id/imageFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/facebook"
            android:contentDescription="@string/alternativa" />
    </LinearLayout>

    <TextView
        android:id="@+id/textNuovoAccount"
        android:layout_width="227dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/nuovo_utente"
        android:textAlignment="center"
        android:textColor="#8B131111"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialLayout" />

     <Button
         android:id="@+id/buttonRegistrati"
         android:layout_width="319dp"
         android:layout_height="54dp"
         android:layout_marginTop="4dp"
         android:background="@drawable/bordi_tondi_button"
         android:text="@string/registrati"
         android:textColor="#CB090808"
         android:textStyle="bold"
         android:onClick="openRegisterActivity"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.489"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/textNuovoAccount"
         />

    <ProgressBar
        android:id="@+id/loginBarraCaricamento"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />


</androidx.constraintlayout.widget.ConstraintLayout>